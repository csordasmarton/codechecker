{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "../node_modules/@types/"
    ],
    "baseUrl": ".",
    "paths": {
      "@cc/shared": ["../api"],
      "@cc/authentication": ["../api/codeCheckerAuthentication_v6/"],
      "@cc/db-access": ["../api/codeCheckerDBAccess_v6/"],
      "@cc/product-management": ["../api/codeCheckerProductManagement_v6/"]
    }
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules/*",
    "**/*-aot.ts"
  ]
}
